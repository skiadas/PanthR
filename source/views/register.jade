!!! 5
html
  head
    link(href="stylesheets/screen.css"
      media="screen, projection"
      rel="stylesheet"
      type="text/css")

  title Register
  body
    include header
    h1 Register for PanthR
    form(name="reg",
      action="register")
      br
      label(for="email") Email  
        input(type="text", 
          name="email", 
          id="email") 
      br
      label(for="nick") Nickname  
        input(type="text", 
          name="nick", 
          id="nick") 
      br 
      label(for="password") Password  
        input(type="password", 
          name="password", 
          id="password") 
      br 
      label(for="sub")
        br
        input(type="submit", 
          name="submit", 
           value="Submit", 
           id="submit")
  include footer
  include scripts
  