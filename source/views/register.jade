!!! 5
html
  head
    link(href="stylesheets/screen.css"
      media="screen, projection"
      rel="stylesheet"
      type="text/css")
    link(href="stylesheets/loginPage.css"
      media="screen, projection"
      rel="stylesheet"
      type="text/css")
  title Register
  body
    include header
    div#registerForm
      h2 Register for PanthR
      form(name="reg",
        action="register"
        method="post")
        //- br
        div
          label(for="email") Email  
          input(type="text", 
            name="email", 
            id="email") 
          span
        //- br
        div
          label(for="nick") Nickname  
          input(type="text", 
            name="nick", 
            id="nick") 
          span
        //- br 
        div
          label(for="password") Password  
          input(type="password", 
            name="password", 
            id="password")
          span
        //- br 
        input(type="submit", 
          name="submit", 
          value="Register!", 
          id="submit")
  include footer
  script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"
    type="text/javascript")
  script(src="javascripts/register.js")
  